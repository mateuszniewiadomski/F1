@model F1.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="d-flex">
    <div style="margin: 10px;">
        <img src="@Url.Content(Model.PhotoLink)" alt="" height="100" />
    </div>
    <div style="margin: 10px;">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.TeamName):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.TeamName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ConstructorName):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ConstructorName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nationality):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nationality.NationName)
            </dd>
        </dl>
    </div>
</div>
<hr />
<div>
    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a type="button" class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
