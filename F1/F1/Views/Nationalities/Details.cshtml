@model F1.Models.Nationality

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="d-flex">
    <div style="margin: 10px;">
        <img src="@Url.Content(Model.PhotoLink)" alt="" height="100" />
    </div>
    <div style="margin: 10px;">
        <dl>
            <dt style="width: 200px;">
                @Html.DisplayNameFor(model => model.NationName):
            </dt>
            <dd style="width: 200px;">
                @Html.DisplayFor(model => model.NationName)
            </dd>
            <dt style="width: 200px;">
                @Html.DisplayNameFor(model => model.CapitalCity):
            </dt>
            <dd style="width: 200px;">
                @Html.DisplayFor(model => model.CapitalCity)
            </dd>
        </dl>
    </div>
</div>
<hr />
<div>
    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a type="button" class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
