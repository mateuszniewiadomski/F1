<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

@{
    ViewData["Title"] = "Home Page";
}

<div style="display: flex; justify-content: space-between;">
    <h1 style="justify-content: flex-start">Top 10 best drivers all the time</h1>
    <button class="btn btn-primary" style="margin: 10px; margin-right: 10%; max-height: 40px;" id="refreshBtn" data-url="@Url.Action("UpdateTable")">Refresh</button>
</div>

<div id="table"></div>

<script type="text/javascript">
    $(function () {
        $('#refreshBtn').click(function (e) {
            $('#table').load('/Home/UpdateTable');
        });
    });
</script>

<script>
    $(function () {
        $('#refreshBtn').click();
    });
</script>